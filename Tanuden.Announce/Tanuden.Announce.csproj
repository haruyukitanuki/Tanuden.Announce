<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net7.0</TargetFramework>
        <RootNamespace>Tanuden.Announce</RootNamespace>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <AssemblyName>Tanuden_Announce</AssemblyName>
        <IsPackable>false</IsPackable>
        <Company>Tanukigawa Dentetsu</Company>
        <Product>Tanuden Announce</Product>
        <NeutralLanguage>ja</NeutralLanguage>
        <Version>1.0.1</Version>
        <Copyright>2024, Haruyuki Tanukiji. All rights reserved.</Copyright>
        <SelfContained>true</SelfContained>
        <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    </PropertyGroup>

    <ItemGroup>
        <Reference Include="Tanuden.Common">
            <HintPath>..\dll\Tanuden.Common.dll</HintPath>
        </Reference>
        <Reference Include="TrainCrewInput">
            <HintPath>..\dll\TrainCrewInput.dll</HintPath>
        </Reference>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="NAudio" Version="2.2.1"/>
    </ItemGroup>

</Project>
